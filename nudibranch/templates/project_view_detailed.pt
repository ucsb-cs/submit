<div metal:use-macro="_LAYOUT">
<div metal:fill-slot="content">
  <div tal:condition="prev_next_user">
    <hr>
    <div tal:replace="structure prev_next_user"></div>
    <hr>
  </div>

  <p tal:condition="can_edit">
     Info for ${project.name}
     (<a href="${_R('project_edit', project_id=project.id)}">edit</a>)
  </p>
  <p tal:condition="not can_edit">
    Info for ${project.name}
  </p>
     
    <p>Make a submission via <code>~bboe/bin/submit.py -p ${project.klass.name}:${project.id} file [file...]</code></p>
  <p tal:condition="request.user.is_admin_for_project(project) and not submissions">
    ${name} has no submissions</p>
  <p tal:condition="not request.user.is_admin_for_project(project) and not submissions">You have no submissions</p>

  <p tal:condition="request.user.is_admin_for_project(project) and submissions">
    These are the submissions for ${name}:</p>
  <p tal:condition="not request.user.is_admin_for_project(project) and submissions">
    There are your submissions:</p>
  <ul tal:condition="submissions">
    <li tal:repeat="submission submissions">
      <a href="${_R('submission_item', submission_id=submission.id)}">${str(submission.created_at)}
    </a>
    </li>
  </ul>
</div>
</div>
